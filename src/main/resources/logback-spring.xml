<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 환경별 로그 경로 설정 -->
    <springProfile name="local">
        <property name="LOG_PATH" value="logs" />
    </springProfile>
    
    <springProfile name="dev">
        <property name="LOG_PATH" value="/home/ubuntu/logs/superlawva" />
    </springProfile>
    
    <springProfile name="prod">
        <property name="LOG_PATH" value="/var/log/superlawva" />
    </springProfile>
    
    <!-- 기본값 (프로필이 없을 때) -->
    <springProfile name="!local,!dev,!prod">
        <property name="LOG_PATH" value="logs" />
    </springProfile>

    <!-- 로그 파일명 설정 -->
    <property name="LOG_FILE" value="${LOG_PATH}/application.log" />
    <property name="ERROR_LOG_FILE" value="${LOG_PATH}/error.log" />

    <!-- 콘솔 출력 (개발 환경용) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 일반 로그 파일 출력 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 에러 로그 파일 출력 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${ERROR_LOG_FILE}</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 로그 레벨별 설정 -->
    <logger name="com.superlawva" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <!-- SQL 로그 설정 (개발 환경에서만) -->
    <springProfile name="local,dev">
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="FILE" />
        </logger>
        
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
            <appender-ref ref="FILE" />
        </logger>
    </springProfile>

    <!-- Spring Security 로그 -->
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <!-- 루트 로그 설정 -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
        <!-- 개발 환경에서만 콘솔 출력 -->
        <springProfile name="local,dev">
            <appender-ref ref="CONSOLE" />
        </springProfile>
    </root>

</configuration>
